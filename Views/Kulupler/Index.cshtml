@using OgrenciBilgiSistemi.Models.EntityFramework
@model List<TBLKULUPLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered"
    <tr>
        <th>
            KULÜP ID
        </th>
        <th>
            KULÜP ADI
        </th>
        <th>
            İŞLEMLER
        </th>
    </tr>
    <tbody>
        @foreach (var kulup in Model)
        {
        <tr>
            <td>
                @kulup.KulupID
            </td>
            <td>
                @kulup.KulupAd
            </td>
            <td>
                <a href="/Kulupler/Sil/@kulup.KulupID" class="btn btn-danger">Sil</a>
            
                <a href="/Kulupler/KulupGetir/@kulup.KulupID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
        }
    </tbody>

</table>
<a href="/Kulupler/YeniKulup" class="btn btn-primary">Yeni Kulüp Kaydı</a>