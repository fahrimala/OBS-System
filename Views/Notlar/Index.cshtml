
@using OgrenciBilgiSistemi.Models.EntityFramework
@model List<TBLNOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered"
    <tr>
        <th>
            NOT ID
        </th>
        <th>
            ÖĞRENCİ
        </th>
        <th>
            DERS
        </th>
        <th>
            SINAV1
        </th>
        <th>
            SINAV2
        </th>
        <th>
            SINAV3
        </th>
        <th>
            PROJE
        </th>
        <th>
            ORTALAMA
        </th>
        <th>
            DURUM
        </th>
        <th>
            İŞLEMLER
        </th>
    </tr>
    <tbody>
@foreach (var sınav in Model)
{
        <tr>
            <td>
                @sınav.NotID
            </td>
            <td>
                @sınav.OgrenciID
            </td>
            <td>
                @sınav.DersID
            </td>
            <td>
                @sınav.Sınav1
            </td>
            <td>
                @sınav.Sınav2
            </td>
            <td>
                @sınav.Sınav3
            </td>
            <td>
                @sınav.Proje
            </td>
            <td>
                @sınav.Ortalama
            </td>
            <td>
                @sınav.Durum
            </td>
            <td>
                <a href="/Notlar/Sil/@sınav.OgrenciID" class="btn btn-danger">Sil</a>

                <a href="/Notlar/Notgetir/@sınav.OgrenciID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
}
    </tbody>

</table>
<a href="/Notlar/YeniSinav" class="btn btn-primary">Yeni Sınav Girişi</a>
